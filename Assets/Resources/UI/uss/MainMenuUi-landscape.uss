.main-menu-title-label {
}

.screen-label {
    font-size: 26px;
    -unity-font-style: bold;
    color: rgb(255, 255, 255);
}

.title {
    background-image: resource('UI/Textures/Backflow_Buddy_Title 2');
    -unity-background-scale-mode: scale-to-fit;
    align-self: center;
    width: 100%;
    height: 100%;
    translate: 0 -7%;
    -unity-slice-scale: -0.3px;
}

.main-container {
    flex-grow: 0;
    width: 100%;
    height: 100%;
    align-items: center;
    
}

.main-menu-button__container {
    width: 100%;
    margin-bottom: 8%;
}
