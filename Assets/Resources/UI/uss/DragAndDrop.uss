.container {
    background-color: rgb(96, 10, 10);
    width: 51%;
    height: 2143px;
    align-self: auto;
    align-items: center;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    position: relative;
    left: auto;
    top: auto;
    right: auto;
    bottom: auto;
    justify-content: space-around;
}

.drop-area {
    width: 100%;
    height: 100%;
}
